{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-xl-12 col-md-8">
        <div class="card card-default card-shadow">
            <div class="card-header">
                <div class="card-title">
                    <h2>{% trans %}user.my_scores.my_scores{% endtrans %}</h2>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>{% trans %}user.my_scores.tutorial{% endtrans %}</th>
                            <th>{% trans %}user.my_scores.score{% endtrans %}</th>
                            <th>{% trans %}user.my_scores.date{% endtrans %}</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for score in scores %}
                        <tr>
                            <td>{{ score.tutorial.title|raw }}</td>
                            <td>{{ score.score|raw }}</td>
                            <td>{{ score.playedAt|date("d/m/Y h:i:s") }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('user_account') }}">{% trans %}user.my_scores.back{% endtrans %}</a>

            </div>
        </div>
    </div>
{% endblock %}
