{% extends 'base.html.twig' %}

{% block body %}

    <h2 class="NomUser">{{ user.username }}</h2>

    <div class="row placementuser">
        <div class="col-md-4 boutonuser"><a href="{{ path('user_tutorials', {'id': user.id}) }}" class="link-create">{% trans %}user.index.my_tutorials{% endtrans %}</a></div>
        <div class="col-md-4 boutonuser"><a href="{{ path('user_scores', {'id': user.id}) }}" class="link-create">{% trans %}user.index.my_scores{% endtrans %}</a></div>
        <div class="col-md-4 boutonuserlogout"><a href="{{ path('app_logout') }}">{% trans %}user.index.logout{% endtrans %}</a></div>
    </div>

    <div class="col-md-4 mywallet">{% trans %}user.index.wallet{% endtrans %} {{ user.wallet }} {% trans %}user.index.point{% endtrans %}{% if user.wallet > 1 %}s{% endif %}! <i class="fas fa-coins colorcoins"></i></div>
    
    <div class="BookMarkList" > 
        <p class="titrePartieUser">My bookmark :</p> 
        {% for bookmark in bookmarks %}
                <a href="{{ path('tutorial_view', {'id': bookmark.post.id}) }}">{{ bookmark.post.title }}</a>
        {% endfor %}
    </div>
    
    {% if is_granted('ROLE_SUPER_ADMIN') %}
        <div class="row placementuser">
            <div class="col-md-6 boutonuser"><a href="{{ path('admin') }}">EasyAdmin</a></div>
            <div class="col-md-6 boutonuser"><a href="{{ path('achievement_list') }}">{% trans %}user.index.achievements{% endtrans %}</a></div>
        </div>
    {% endif %}

{% endblock %}
