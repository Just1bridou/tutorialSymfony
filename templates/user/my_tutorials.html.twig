{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-xl-12 col-md-8">
        <div class="card card-default card-shadow">
            <div class="card-header">
                <div class="card-title">
                    <h2>{% trans %}user.my_tutorials.my_tutorials{% endtrans %}</h2>
                </div>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th>{% trans %}user.my_tutorials.title{% endtrans %}</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for tutorial in tutorials %}
                        <tr>
                            <td>{{ tutorial.title|raw }}</td>
                            <td><a href="{{ path('tutorial_edit', {'id': tutorial.id}) }}" class="link-create">{% trans %}user.my_tutorials.edit{% endtrans %}</a></td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                <a href="{{ path('tutorial_create') }}">{% trans %}user.my_tutorials.create{% endtrans %}</a>
                <a href="{{ path('user_account') }}">{% trans %}user.my_tutorials.back{% endtrans %}</a>

            </div>
        </div>
    </div>
{% endblock %}
